<Window x:Class="GUI_Starter.PortPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Starter"
        mc:Ignorable="d"
        Title="Select Port" Height="200" Width="400">
    <StackPanel Margin="5">
        <Label HorizontalAlignment="Center">Select Port</Label>
        <ComboBox Name="cb_ports" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Margin="20"></ComboBox>
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Click="Select_Button_Click">Select</Button>
            <Button Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Click="Cancle_Button_Click">Cancel</Button>            
        </DockPanel>
    </StackPanel>
</Window>
